set $grey                #808080
set $lgrey        	 #e5e5e5
set $blue      	         #0000ff
set $cyan                #00ffff
set $black               #000000
set $white               #ffffff
set $yellow              #ffff00
set $red                 #ff0000
set $green               #4bfd4b

bar {
        status_command i3status -c ~/.config/i3status/config
	position top
	font pango:Roboto 8
	strip_workspace_numbers yes
	colors {
		background 		$black
		separator 		$black
		focused_workspace	$grey	$black	$green
		active_workspace	$black	$black	$grey
		inactive_workspace	$black	$black	$grey
		urgent_workspace	$black	$green	$black
	}
}

#bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+0 mode "$mode_system"
set $mode_system (l)ock, (r)eboot, s(u)spend, (s)hutdown
mode "$mode_system" {
    bindsym u exec --no-startup-id i3exit suspend, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym s exec --no-startup-id i3exit shutdown, mode "default"
    bindsym l exec --no-startup-id blurlock
    bindsym Escape mode "default"
}

