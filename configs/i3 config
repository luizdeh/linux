bar {
	i3bar_command i3bar --transparency
	status_command i3status -c ~/.config/i3status/config
	position top
	tray_padding 0
	workspace_min_width 40
	font pango:hack bold 9
	strip_workspace_numbers no 
	colors {
		background 		$tblack
		separator 		$tblack
		statusline		$dgreen
		focused_workspace	$tblack	$green	$black
		active_workspace	$tblack	$black	$lgrey
		inactive_workspace	$tblack	$black	$lgrey
		urgent_workspace	$tblack	$purple	$lgrey
	}
}
