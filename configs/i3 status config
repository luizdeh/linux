# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        color_good =     '#4bfd4b'  
        color_degraded = '#ff0000'  
        color_bad =      '#00ffff'        
}


#order += "ipv6"
#order += "wireless _first_"
#order += "ethernet _first_"
order += "cpu_usage"
#order += "load"
order += "memory"
#order += "cpu_temperature 0"
order += "disk /"
order += "tztime local"

cpu_usage { 
	format = "  %usage"
}

wireless _first_ {
	format_up = "%quality"
#        format_up = "  %essid @%quality"
#        format_up = "  %ip | %essid @%quality  "
        format_down = ""
}

ethernet _first_ {
        format_up = "  %ip (%speed)  "
        format_down = ""
}

battery all {
        format = "%status %percentage %remaining"
}

disk "/" {
        format = "  %percentage_used"
#	format = "  %free  "
}

load {
        format = "  %1min . %5min  "
}

memory {
	format = "  %percentage_used"
#        format = "  ram %percentage_used / %total  "
        threshold_degraded = "1G"
        format_degraded = " RAM < %available "
}

cpu_temperature 0 {
        format = "  %degrees°C  "
}

tztime local {
        format = "  %d-%m-%Y   %H:%M:%S  "
}
