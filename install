loadkeys br-abnt2

iwctl

timedatectl set-ntp true

fdisk /dev/sda
mkfs.fat -F32 /dev/sda1
mkswap /dev/sda2
swapon /dev/sda2
mkfs.ext4 /dev/sda3
mount /dev/sda3 /mnt

pacstrap /mnt base linux linux-headers linux-firmware 
pacman -Syu 
pacman -S sudo vim dialog

genfstab -U /mnt >> /mnt/etc/fstab

arch-chroot /mnt

ln -sf /usr/share/zoneinfo/America/Sao_Paulo /etc/localtime
hwclock --systohc
nano /etc/locale.gen
locale-gen
nano /etc/locale.conf
	LANG=en_US.UTF-8

echo oldpc > /etc/hostname
nano /etc/hosts
	127.0.0.1      localhost
	::1            localhost
	127.0.1.1      oldpc

passwd
useradd -m deh
passwd deh
usermod -aG wheel,audio,video,optical,storage deh
EDITOR=nano visudo
	%wheel ALL=(ALL) ALL

nano /etc/vconsole.conf
	KEYMAP=br-abnt2

grub efibootmgr os-prober mtools
mkdir /boot/efi
mount /dev/sda1 /boot/efi
grub-install --target=x86_64-efi --bootloader-id=grub_uefi
grub-mkconfig -o /boot/grub/grub.cfg

systemctl start NetworkManager.service
systemctl enable NetworkManager

exit
umount /mnt
reboot

git clone https://aur.archlinux.org/yay-git.git
ls -la
cd yay-git
makepkg -si

yay -S clipit brave-bin g810-led-git




	
